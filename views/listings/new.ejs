<% layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br>
    <h3>Create a New Listing</h3>
    <form action="/listings" method="POST" novalidate class="needs-validation">
      
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input name="listing[title]" placeholder="Add acstchy title" type="text" class="form-control" required>
        </div>
       
         

        <div class="mb-3">
            <label for="description" class="from-lable">Description</label>
             <textarea name="listing[description]" placeholder="Enter description" type="text" class="form-control" required></textarea> 
        </div>
       

        <div class="mb-3">
            <label for="image" class="form-lable">Image Link</label>
            <input name="listing[image]" placeholder="Enter image URL/Link" type="text" class="form-control" >   
        </div>
        

       <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">Price</label>
            <input name="listing[price]" placeholder="Enter price" type="number" class="form-control" required>
       </div>
       

       <div class="mb-3 col-md-8">
        <label for="country" class="form-lable">Country</label>
        <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
       </div>
    

       </div>

        <div class="mb-3">
            <label for="location" class="form-lable">Location</label>
            <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
        </div>
     

       
        <button class="btn btn-dark add-btn mt-3">Add</button>

      
     
    </form>
</div>
</div>
</body>
